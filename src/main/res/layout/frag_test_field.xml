<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res-auto" app:layout_width="match_parent" app:layout_height="match_parent">
    <LinearLayout app:orientation="vertical" app:id="@+id/root" style="@style/AppWidget_Page">
        <TextView app:textSize="@dimen/general_font_size_normal" app:id="@+id/icon_font_showcase" app:layout_width="match_parent" app:layout_height="wrap_content" app:layout_marginTop="@dimen/general_subview_vertical_padding_large" app:textColorArray="@array/blue" />
        <TextView app:textSize="40dp" app:id="@+id/icon_font_showcase_large" app:layout_width="match_parent" app:layout_height="wrap_content" app:textColorArray="@array/blue" />
        <com.douban.book.reader.view.BoxedWorksView_ app:id="@+id/boxed_works" app:layout_width="match_parent" app:layout_height="UNKNOWN_DATA_0xc801" app:layout_marginTop="@dimen/general_subview_vertical_padding_normal" />
        <com.douban.book.reader.view.BoxedWorksView_ app:id="@+id/boxed_works_2" app:layout_width="match_parent" app:layout_height="UNKNOWN_DATA_0xc801" app:layout_marginTop="@dimen/general_subview_vertical_padding_normal" />
