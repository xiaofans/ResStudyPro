<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res-auto" app:id="@+id/root" app:descendantFocusability="blocksDescendants" app:layout_width="match_parent" app:layout_height="match_parent" style="@style/AppWidget_List_Item">
    <RatingBar app:id="@+id/rate" app:layout_below="@id/title" style="@style/AppWidget_RatingBar_Indicator" />
    <TextView app:id="@+id/content" app:layout_marginTop="@dimen/general_subview_vertical_padding_normal" app:layout_marginBottom="@dimen/general_subview_vertical_padding_normal" app:maxLines="3" app:layout_below="@+id/rate" style="@style/AppWidget_Text_Content_Block" />
    <LinearLayout app:gravity="top|bottom|center_vertical|fill_vertical|center|fill" app:layout_width="match_parent" app:layout_height="wrap_content" app:layout_below="@+id/content">
        <TextView app:ellipsize="end" app:id="@+id/author" app:singleLine="true" style="@style/AppWidget_Text_Secondary" />
        <TextView app:id="@+id/create_date" app:layout_marginLeft="@dimen/general_subview_horizontal_padding_normal" app:singleLine="true" style="@style/AppWidget_Text_Secondary" />
        <View app:layout_width="UNKNOWN_DATA_0x1" app:layout_height="match_parent" app:layout_weight="1.0" />
        <TextView app:textSize="@dimen/general_font_size_small" app:id="@+id/comment_info" app:layout_width="wrap_content" app:layout_height="wrap_content" app:singleLine="true" app:textColorArray="@array/blue" />
    </LinearLayout>
</RelativeLayout>
