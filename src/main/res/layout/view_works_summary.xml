<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res-auto">
    <com.douban.book.reader.view.WorksCoverView app:id="@+id/cover" app:layout_marginTop="@dimen/general_subview_vertical_padding_normal" app:layout_alignParentTop="true" app:layout_alignParentRight="true" style="@style/AppWidget_Cover" />
    <LinearLayout app:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end" app:orientation="horizontal" app:layout_width="wrap_content" app:layout_height="wrap_content" app:layout_marginTop="2dp" app:layout_below="@+id/cover" app:layout_alignLeft="@+id/cover" app:layout_alignRight="@+id/cover">
        <TextView app:textSize="@dimen/general_font_size_medium" app:id="@+id/works_type" app:layout_width="wrap_content" app:layout_height="wrap_content" app:drawablePadding="2dp" app:textColorArray="@array/blue" />
    </LinearLayout>
    <LinearLayout app:orientation="vertical" app:id="@+id/works_info" app:layout_width="wrap_content" app:layout_height="wrap_content" app:layout_marginTop="@dimen/general_subview_vertical_padding_normal" app:layout_marginRight="@dimen/general_subview_horizontal_padding_normal" app:layout_toLeftOf="@+id/cover" app:layout_alignParentLeft="true" app:layout_alignParentTop="true">
        <TextView app:textStyle="bold" app:id="@id/title" style="@style/AppWidget_Text_Title_Page_NoPadding" />
        <TextView app:textStyle="UNKNOWN_DATA_0x0" app:id="@+id/sub_title" app:layout_marginTop="@dimen/general_subview_vertical_padding_small" app:singleLine="false" style="@style/AppWidget_Text_Title_Item" />
        <LinearLayout app:gravity="top|bottom|center_vertical|fill_vertical|center|fill" app:orientation="horizontal" app:layout_width="wrap_content" app:layout_height="wrap_content" app:layout_marginTop="@dimen/general_subview_vertical_padding_normal">
            <RatingBar app:id="@+id/rating_bar" style="@style/AppWidget_RatingBar_Indicator" />
            <TextView app:textSize="@dimen/general_font_size_small" app:id="@+id/rating_info" app:layout_marginLeft="@dimen/general_subview_vertical_padding_small" style="@style/AppWidget_Text_Secondary" />
        </LinearLayout>
        <TextView app:id="@+id/author" app:layout_marginTop="@dimen/general_subview_vertical_padding_normal" style="@style/AppWidget_Text_Secondary" />
        <TextView app:id="@+id/translator" app:layout_marginTop="@dimen/general_subview_vertical_padding_small" style="@style/AppWidget_Text_Secondary" />
        <TextView app:id="@+id/category" app:layout_marginTop="@dimen/general_subview_vertical_padding_small" style="@style/AppWidget_Text_Secondary" />
        <TextView app:id="@+id/content_space" app:layout_marginTop="@dimen/general_subview_vertical_padding_small" style="@style/AppWidget_Text_Secondary" />
    </LinearLayout>
</merge>
