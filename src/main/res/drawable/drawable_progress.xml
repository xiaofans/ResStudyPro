<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate android:fromDegrees="0.0" android:toDegrees="720.0" android:pivotX="50%" android:pivotY="50%">
            <shape android:shape="ring" android:innerRadiusRatio="2.5" android:thicknessRatio="40.0" android:useLevel="false">
                <size android:height="@dimen/size_progress_bar" android:width="@dimen/size_progress_bar" />
                <gradient android:startColor="#0071ceb5" android:endColor="@color/green" android:useLevel="false" android:type="sweep" android:centerY="0.5" />
            </shape>
        </rotate>
    </item>
    <item>
        <bitmap android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" android:src="@drawable/ic_wagtail" />
    </item>
</layer-list>
